{
  "name": "overlord",
  "version": "2.1.7",
  "description": "An Asset Creation Pipeline Management Tool for Daz Studio",
  "main": "overlord.js",
  "scripts": {
    "start": "electron overlord.js",
    "dev": "electron overlord.js --dev",
    "build": "electron-builder --win"
  },
  "keywords": [
    "daz",
    "studio",
    "render",
    "pipeline",
    "iray"
  ],
  "author": "Vineyard Technologies",
  "license": "AGPL-3.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/Vineyard-Technologies/Overlord.git"
  },
  "build": {
    "appId": "com.vineyard.overlord",
    "productName": "Overlord",
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "images/favicon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "files": [
      "overlord.js",
      "images/**/*",
      "scripts/**/*",
      "templates/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "scripts",
        "to": "scripts"
      },
      {
        "from": "templates",
        "to": "templates"
      }
    ]
  },
  "devDependencies": {
    "electron": "^38.3.0",
    "electron-builder": "^26.0.12"
  },
  "overrides": {
    "glob": "^11.0.0",
    "rimraf": "^6.0.1"
  }
}
