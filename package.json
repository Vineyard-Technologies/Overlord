{
  "name": "overlord",
  "version": "2.1.7",
  "description": "An Asset Creation Pipeline Management Tool for Daz Studio",
  "main": "overlord.js",
  "scripts": {
    "start": "electron overlord.js",
    "dev": "electron overlord.js --dev",
    "clean": "node -e \"const fs = require('fs'); const path = require('path'); const distPath = path.join(__dirname, 'dist'); if (fs.existsSync(distPath)) { fs.rmSync(distPath, { recursive: true, force: true }); console.log('Cleaned dist folder'); }\"",
    "prebuild": "npm run clean",
    "build": "electron-builder --win --x64 --dir",
    "build:portable": "electron-builder --win --x64 portable",
    "postbuild": "node set-icon.js",
    "zip": "node scripts/constructZipper.js"
  },
  "keywords": [
    "daz",
    "studio",
    "render",
    "pipeline",
    "iray"
  ],
  "author": "Vineyard Technologies",
  "license": "AGPL-3.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/Vineyard-Technologies/Overlord.git"
  },
  "build": {
    "appId": "com.vineyard.overlord",
    "productName": "Overlord",
    "executableName": "Overlord",
    "copyright": "Copyright Â© 2025 Vineyard Technologies",
    "asar": false,
    "win": {
      "target": [
        {
          "target": "dir",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "build/icon.ico"
    },
    "files": [
      "overlord.js",
      "images/**/*",
      "scripts/**/*",
      "templates/**/*",
      "package.json",
      "node_modules/**/*"
    ]
  },
  "devDependencies": {
    "electron": "^38.3.0",
    "electron-builder": "^26.0.12",
    "rcedit": "^4.0.1",
    "to-ico": "^1.1.5"
  },
  "dependencies": {
    "archiver": "^7.0.1",
    "winreg": "^1.2.5"
  },
  "overrides": {
    "glob": "^11.0.0",
    "rimraf": "^6.0.1"
  }
}
